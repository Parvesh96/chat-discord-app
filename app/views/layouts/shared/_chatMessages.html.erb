<% if chat_messages.length > 0 %>
    <% chat_messages.each_with_index do |chat_message, index|%>
        <% 
            chat_class = (chat_message.sender_id == current_user.id ) ? 'chat-message-right' : 'chat-message-left'
            chatter_name = (chat_message.sender_id == current_user.id ) ? 'You' : selected_user.username 
        %>
            <div class="<%= chat_class %> pb-4">
                <div>
                    <img src="https://bootdey.com/img/Content/avatar/avatar3.png" class="rounded-circle mr-1" alt="Sharon Lessman" width="40" height="40">
                    <div class="text-muted small text-nowrap mt-2">2:34 am</div>
                </div>
                <div class="flex-shrink-1 bg-light rounded py-2 px-3 ml-3">
                    <div class="font-weight-bold mb-1"><%= chatter_name %></div>
                    <%= chat_message.message %>
                </div>
            </div>
    <%end%>
<% end %>